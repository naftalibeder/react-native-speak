{
  "name": "react-native-speak",
  "version": "1.0.14",
  "description": "A wonderful react-native library for TTS",
  "main": "build/main/src/index.js",
  "types": "build/main/src/index.d.ts",
  "module": "build/module/src/index.js",
  "repository": "git@github.com:ericlewis/react-native-speak.git",
  "homepage": "git@github.com:ericlewis/react-native-speak.git",
  "author": {
    "name": "Eric Lewis"
  },
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "describe": "npm-scripts-info",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "run-s build test:*",
    "test:lint": "tslint --project . && prettier \"src/**/*.ts\" --list-different",
    "doc": "run-s doc:html && open build/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out build/docs",
    "doc:markdown": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out docs --theme markdown",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "version": "standard-version",
    "reset": "git clean -dfx && git reset --hard && npm i",
    "clean": "trash build test",
    "all": "run-s reset test doc:html",
    "start": "react-native start",
    "prepare-release": "run-s all version doc:publish"
  },
  "scripts-info": {
    "info": "Display information about the package scripts",
    "build": "Clean and rebuild the project",
    "fix": "Try to automatically fix any linting problems",
    "test": "Lint the project",
    "doc": "Generate HTML API documentation and open it in a browser",
    "doc:json": "Generate API documentation in typedoc JSON format",
    "version": "Bump package.json version, update CHANGELOG.md, tag release",
    "reset": "Delete all untracked files and reset the repo to the last commit",
    "start": "Runs the packager for example",
    "prepare-release": "One-step: clean, build, test, publish docs, and prep a release"
  },
  "peerDependencies": {
    "react-native": ">=0.63"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/runtime": "^7.12.5",
    "@react-native-speak/google": "1.0.4",
    "@types/invariant": "^2.2.34",
    "@types/lodash.get": "^4.4.6",
    "@types/lodash.keyby": "^4.6.6",
    "@types/node": "^14.14.14",
    "@types/react-native": "^0.63.42",
    "@types/react-test-renderer": "^17.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "gh-pages": "^3.1.0",
    "metro-react-native-babel-preset": "^0.64.0",
    "npm-run-all": "^4.1.5",
    "open-cli": "^6.0.1",
    "prettier": "^2.2.1",
    "standard-version": "^9.0.0",
    "trash-cli": "^4.0.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.3"
  },
  "prettier": {
    "singleQuote": true
  },
  "dependencies": {
    "@react-native-speak/base": "1.0.3",
    "@react-native-speak/native": "1.0.3",
    "invariant": "^2.2.4",
    "lodash.get": "^4.4.2",
    "lodash.keyby": "^4.6.0",
    "striptags": "^3.1.1"
  },
  "jest": {
    "preset": "react-native"
  }
}
